{
    "manifest_version": 2,
    "name": "ClickRip",
    "version": "1.0",
    "description": "Detect missing X-Frame-Options and simulate clickjacking attacks (educational).",
    "icons": {
      "128": "icon128.png"
    },
    "permissions": [
      "tabs",
      "webRequest",
      "webRequestBlocking",
      "<all_urls>"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon128.png"
    },
    "web_accessible_resources": [
        "attacks/classic-iframe/poc.html"
    ]

}
  